PUBLIC_IP=your_server_ip

# InfluxDB 2 bootstrap
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=change_me_secure_password
DOCKER_INFLUXDB_INIT_ORG=iot
DOCKER_INFLUXDB_INIT_BUCKET=iotsensors
DOCKER_INFLUXDB_INIT_RETENTION=168h
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=change_me_secure_token_64_chars

# Client settings for Telegraf and API
INFLUXURL=http://influxdb:8086
INFLUXORG=iot
INFLUXBUCKET=iotsensors

# API port
APIPORT=8000

# MQTT credentials for Telegraf
MQTTUSER=telegraf
MQTTPASS=change_me_telegraf_password

# MQTT credentials for ESP8266 sensors
SENSORUSER=sensor
SENSORPASS=change_me_sensor_password

# Tokens
INFLUXTOKEN=change_me_secure_token_64_chars
API_TOKEN=change_me_secure_api_token_64_chars

# Grafana credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_secure_grafana_password

