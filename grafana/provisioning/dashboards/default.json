{
  "__inputs": [
    {
      "name": "DS_INFLUXDB",
      "label": "InfluxDB",
      "description": "",
      "type": "datasource",
      "pluginId": "influxdb",
      "pluginName": "InfluxDB"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.5.0"
    },
    {
      "type": "datasource",
      "id": "influxdb",
      "name": "InfluxDB",
      "version": "1.0.0"
    }
  ],
  "id": 1,
  "uid": "iot-device-dashboard",
  "title": "IoT Device Dashboard",
  "tags": ["iot", "autoprovisioned"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 0,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "templating": {
    "list": [
      {
        "current": {},
        "datasource": {
          "type": "influxdb",
          "uid": "${DS_INFLUXDB}"
        },
        "definition": "import \"influxdata/influxdb/v1\"\n\nv1.tagValues(bucket: v.defaultBucket, tag: \"deviceid\")",,
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "name": "deviceid",
        "options": [],
        "query": "import \"influxdata/influxdb/v1\"\n\nv1.tagValues(bucket: v.defaultBucket, tag: \"deviceid\")",,
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "id": 10,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "type": "timeseries",
      "title": "Temperature",
      "datasource": "${DS_INFLUXDB}",
      "targets": [
        {
          "refId": "A",
          "datasource": "${DS_INFLUXDB}",
          "query": "from(bucket: v.defaultBucket)\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"bme280\" and r.deviceid == v.deviceid and r._field == \"temperature\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean, createEmpty: false)\n  |> yield(name: \"mean\")"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 2, "fillOpacity": 10 }
        }
      }
    },
    {
      "id": 12,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "type": "timeseries",
      "title": "Humidity",
      "datasource": "${DS_INFLUXDB}",
      "targets": [
        {
          "refId": "A",
          "datasource": "${DS_INFLUXDB}",
          "query": "from(bucket: v.defaultBucket)\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"bme280\" and r.deviceid == v.deviceid and r._field == \"humidity\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean, createEmpty: false)\n  |> yield(name: \"mean\")"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "fixedColor": "blue", "mode": "fixed" },
          "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 2, "fillOpacity": 10 }
        }
      }
    },
    {
      "id": 14,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "type": "timeseries",
      "title": "Pressure",
      "datasource": "${DS_INFLUXDB}",
      "targets": [
        {
          "refId": "A",
          "datasource": "${DS_INFLUXDB}",
          "query": "from(bucket: v.defaultBucket)\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"bme280\" and r.deviceid == v.deviceid and r._field == \"pressure\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean, createEmpty: false)\n  |> yield(name: \"mean\")"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "hPa",
          "color": { "fixedColor": "purple", "mode": "fixed" },
          "custom": { "drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 2, "fillOpacity": 10 }
        }
      }
    },
    {
      "id": 16,
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 },
      "type": "stat",
      "title": "Device Status",
      "datasource": "${DS_INFLUXDB}",
      "targets": [
        {
          "refId": "A",
          "datasource": "${DS_INFLUXDB}",
          "query": "from(bucket: v.defaultBucket)\n  |> range(start: -30d)\n  |> filter(fn: (r) => r._measurement == \"status\" and r.deviceid == v.deviceid and r._field == \"value\")\n  |> last()\n  |> yield(name: \"last\")"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [ { "color": "red", "value": null }, { "color": "green", "value": 0 } ]
          },
          "mappings": [
            { "type": "value", "options": { "online": { "text": "Online", "color": "green" }, "offline": { "text": "Offline", "color": "red" } } }
          ]
        }
      }
    },
    {
      "id": 18,
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 16 },
      "type": "stat",
      "title": "Last Seen",
      "datasource": "${DS_INFLUXDB}",
      "targets": [
        {
          "refId": "A",
          "datasource": "${DS_INFLUXDB}",
          "query": "from(bucket: v.defaultBucket)\n  |> range(start: -30d)\n  |> filter(fn: (r) => r._measurement == \"status\" and r.deviceid == v.deviceid and r._field == \"value\")\n  |> last()\n  |> yield(name: \"last\")"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto" },
      "fieldConfig": {
        "defaults": {
          "unit": "fromnow",
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green", "value": null } ] }
        },
        "overrides": [
          {
            "matcher": { "id": "time" },
            "properties": [ { "id": "displayName", "value": "Last Update Time" } ]
          }
        ]
      }
    }
  ]
}